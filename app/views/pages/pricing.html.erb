<%= render "shared/dark_navbar" %>
<div class="bg-purblue-500">
  <div class="bg-purblue-500">

    <!-- Header section with select menu -->
    <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8 lg:max-w-screen-xl">
      <div class="px-0 sm:px-4 lg:px-0 lg:flex lg:justify-between lg:items-center">
        <div class="max-w-xl">
          <h2 class="text-4xl leading-10 font-extrabold text-white sm:text-5xl sm:leading-none sm:tracking-tight lg:text-6xl">Pricing Plans</h2>
          <p class="mt-5 text-xl leading-7 text-indigo-300">Create your program for free and unleash yoopla's power with a paid plan.</p>
        </div>
        <div class="mt-10 w-full max-w-xs lg:mt-0">
          <label for="currency" class="block text-base leading-6 font-medium text-indigo-300">Currency</label>
          <div class="mt-1.5 relative">
            <select id="currency" class="appearance-none block w-full bg-indigo-400 bg-opacity-25 border border-transparent rounded-md py-2 pl-3 pr-10 text-base leading-6 text-white focus:outline-none focus:shadow-outline-blue focus:border-blue-300 sm:text-sm sm:leading-5">
<!--               <option class="bg-gray-900">Australia (AUD)</option>
              <option class="bg-gray-900" >United States (USD)</option> -->
              <option class="bg-gray-900" selected>Europe (EUR)</option>
<!--               <option class="bg-gray-900">Switzerland (CHF)</option>
              <option class="bg-gray-900">United Kingdom (GBP)</option> -->
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 px-2 flex items-center" aria-hidden="true">
              <!-- Heroicon name: chevron-down -->
              <svg class="h-4 w-4 text-indigo-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Comparison table -->
  <div class="max-w-2xl mx-auto bg-white py-16 sm:py-24 sm:px-6 lg:max-w-screen-xl lg:px-8">
    <!-- xs to lg -->
    <%= render "shared/comparison_table_mobile" %>

    <!-- lg+ -->
    <%= render "shared/comparison_table_lg" %>
  </div>

  <div class="bg-gray-50">
    <!-- FAQ -->
    <%= render "shared/faq" %>

  </div>
</div>
