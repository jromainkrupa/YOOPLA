<% content_for :meta_title, t('home.meta_title') %>
<% content_for :meta_description, t('home.meta_description') %>

<div class="relative bg-white overflow-hidden">
  <div class="relative pt-6 pb-16 md:pb-20 lg:pb-24 xl:pb-32">
    <%= render "shared/navbar" %>
    <main class="mt-8 mx-auto max-w-screen-xl px-4 sm:mt-12 sm:px-6 md:mt-20 xl:mt-24">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
          <div class="text-sm font-semibold uppercase tracking-wide text-purblue-200 sm:text-base lg:text-sm xl:text-base">
            <%= t('home.coming_soon') %>
          </div>
          <h2 class="mt-1 text-4xl tracking-tight leading-10 font-extrabold text-gray-900 sm:leading-none sm:text-6xl lg:text-5xl xl:text-6xl">
            <%= t('home.tagline_first_part') %>
            <span class="text-purblue-500"><%= t('home.tagline_span_part') %></span>
            <%= t('home.tagline_last_part') %>
          </h2>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
            <%= t('home.undertagline') %>
          </p>
          <div class="mt-5 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
            <p class="text-base font-medium text-gray-900"><%= t('home.get_notified') %></p>
            <%= render "shared/form", user: @user %>
<!--             <p class="mt-3 text-sm leading-5 text-gray-500">
              We care about the protection of your data. Read our
              <a href="#" class="font-medium text-gray-900 underline">Privacy Policy</a>.
            </p> -->
          </div>
        </div>
        <div class="hidden md:block relative w-full h-64 sm:h-72 md:h-96 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full">
            <%=  image_tag("app_and_phil_the_connected_case", class:"z-40 absolute w-2/3 object-cover bottom-0 right-0 mr-16") %>
            <%= render "shared/home_page_circles" %>
        </div>
      </div>
    </main>
  </div>
</div>
<div class="">
  <%#= render "shared/reassurance"%>
</div>
<div class="">
  <%= render "shared/main_features"%>
</div>
<div class="pt-4">
  <%= render "shared/phil_explainer"%>
</div>

